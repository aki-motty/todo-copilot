{
  "name": "todo-copilot",
  "version": "0.1.0",
  "description": "Simple ToDo list web application with localStorage persistence",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "local:dev": "VITE_API_BASE_URL=/ vite",
    "aws:dev": "VITE_API_BASE_URL=https://9e4itrdq7c.execute-api.ap-northeast-1.amazonaws.com/dev vite",
    "build": "vite build",
    "build:lambda": "vite build --config vite.config.lambda.ts",
    "build:all": "npm run build && npm run build:lambda",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:api": "playwright test e2e/api-integration.spec.ts",
    "e2e:ui": "playwright test --ui",
    "local:db:start": "docker-compose -f local-setup/docker-compose.yml up -d",
    "local:db:seed": "./local-setup/scripts/seed-db.sh",
    "local:invoke": "./local-setup/scripts/invoke-lambda.sh",
    "local:watch": "vite build --watch --config vite.config.lambda.ts",
    "local:sam:start": "./local-setup/scripts/start-sam.sh",
    "local:db:up": "npm run local:db:start && npm run local:db:seed",
    "local:start": "concurrently \"npm run local:db:up\" \"npm run local:watch\" \"npm run local:sam:start\"",
    "local:debug": "sam local invoke -t local-setup/template.yaml -e local-setup/events/get-todos.json --env-vars local-setup/env.json --docker-network todo-network -d 5858",
    "lint": "biome lint src tests",
    "format": "biome format --write src tests",
    "check": "biome check src tests",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.936.0",
    "@aws-sdk/client-dynamodb": "^3.936.0",
    "@aws-sdk/client-lambda": "^3.938.0",
    "@aws-sdk/util-dynamodb": "^3.936.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/aws-lambda": "^8.10.159",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "terser": "^5.44.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
